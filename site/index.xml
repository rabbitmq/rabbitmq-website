    <x:modal mode="www">
      <div id="hero" class='center'>
        <div class='container'>
          <h1>10 years of <br />RabbitMQ Messaging</h1>
          <!-- <h2>Check out our original <a href=''>announcement.</a></h2> -->
        </div>
